        &lt;sys_policy/&gt;
        &lt;sys_scope display_value="Global"&gt;global&lt;/sys_scope&gt;
        &lt;sys_update_name&gt;sp_widget_a9a0b0dec3623100c8b837659bba8f80&lt;/sys_update_name&gt;
